<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SzkolnikMobileApp.LessonsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Plan Lekcji" HorizontalTextAlignment="Center" TextColor="#007bff" FontSize="72" FontFamily="Segoe" FontAttributes="Bold"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="0,2,0,0">
                <Button x:Name="Perbutton" Text="Poprzedni dzień" Clicked="PerDay" WidthRequest="245" HeightRequest="50"/>
                <Button x:Name="Nextbutton" Text="Następny dzień" Clicked="NextDay" WidthRequest="245" HeightRequest="50"/>
            </StackLayout>
            <StackLayout x:Name="title">
                
            </StackLayout>
            <ScrollView>
                <StackLayout x:Name="content">
                    
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>