<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SzkolnikMobileApp.TokenRegistery">
    
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Szkolnik - Rejestracja tokenu" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="tokenentry" Placeholder="Token" Margin="0,240,0,0" />
        <Entry x:Name="symbolentry" Placeholder="Symbol" />
        <Entry x:Name="pinentry" Placeholder="PIN" />
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Zajerestruj token" Clicked="RegisterTokenClicked" WidthRequest="250"/>
            <Button Text="Wyloguj" Clicked="LogoutClicked" WidthRequest="250"/>
        </StackLayout>

        <Label x:Name="output" HorizontalTextAlignment="Center" ></Label>
    </StackLayout>
</ContentPage>